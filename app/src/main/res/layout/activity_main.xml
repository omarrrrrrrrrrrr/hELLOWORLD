<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="17dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:text="@string/nom"
            android:textSize="@dimen/dimTextViewNom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"

                android:hint="@string/nomHint"
                android:inputType="textPersonName"
                android:textSize="@dimen/dimEditTextNom" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bouton"
                android:textSize="@dimen/dimButtonEnvoyer" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="312dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:textAlignment="center"
            android:textColor="@color/colorMessage"
            android:textSize="@dimen/dimMessage" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>